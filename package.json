{
  "name": "battlenations-units",
  "version": "1.0.0",
  "description": "a rank tracker for bn units",
  "main": "src/index.html",
  "scripts": {
    "serve": "http-server ./src -c-1",
    "unit:test": "vitest run --reporter=dot",
    "test": "start-server-and-test serve 8080 test:e2e",
    "test:e2e": "playwright test --reporter=html",
    "install:playwright": "npx playwright install",
    "test:ui": "npx playwright test --ui-port=8081"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fietser97/battlenations-units.git"
  },
  "keywords": [
    "battlenations"
  ],
  "author": "fedde",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fietser97/battlenations-units/issues"
  },
  "homepage": "https://github.com/fietser97/battlenations-units#readme",
  "dependencies": {
    "@playwright/test": "^1.54.1",
    "fs-extra": "^11.3.0",
    "http-server": "^14.1.1",
    "playwright": "^1.54.1",
    "terser": "^5.43.1"
  },
  "devDependencies": {
    "jsdom": "^26.1.0",
    "start-server-and-test": "^2.0.12",
    "vitest": "^3.2.4"
  }
}
